<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.Screens.MainActivity"
    android:background="#222423">

    <FrameLayout
        android:id="@+id/TopBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_below="@id/TopBar">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/buttonAndroid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_android_24"
            android:text="ANDROID"
            android:backgroundTint="@android:color/holo_green_light"
            android:background="@drawable/but_bag"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp"

            android:onClick="handleButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/buttonWebDev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_web_24"
            android:text="WEB DEVELOPMENT"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            android:background="@drawable/but_bag"
            android:textStyle="bold"
            android:textSize="24sp"
            android:onClick="handleButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/buttonFlutter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_flutter_dash_24"
            android:text="Flutter"
            android:textColor="@color/white"
            android:backgroundTint="#03A9F4"
            android:background="@drawable/but_bag"
            android:textStyle="bold"
            android:textSize="24sp"
            android:onClick="handleButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/buttonCloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_cloud_24"
            android:text="Google Cloud"
            android:backgroundTint="#FFC107"
            android:background="@drawable/but_bag"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:onClick="handleButtonClick" />


    </LinearLayout>


</RelativeLayout>